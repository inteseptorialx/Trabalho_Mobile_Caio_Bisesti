<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/config_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Configurações:"
        android:textSize="25dp" />

    <!-- ===============================exercicios==========================================   -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_menu_execicios"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/config_txt"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/select">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- ===============================exercicios fim==========================================   -->

    <!-- ==============================unidade de velocidade===========================================   -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_menu_unidadeVelocidade"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropdown_menu_execicios"
        android:layout_margin="16dp"
        android:hint="@string/select_unidade"
        >

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt_unidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- ===============================unidade de velocidade fim==========================================   -->

    <!-- ==============================unidade de orientação do mapa===========================================   -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_menu_orientacaoMapa"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropdown_menu_unidadeVelocidade"
        android:layout_margin="16dp"
        android:hint="@string/select_orientacaoMapa"
        >

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt_orientacaoMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- ===============================orientação do mapa fim==========================================   -->

    <!-- ==============================tipo do mapa===========================================   -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_menu_tipoMapa"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropdown_menu_orientacaoMapa"
        android:layout_margin="16dp"
        android:hint="@string/select_unidade"
        >

        <AutoCompleteTextView
            android:id="@+id/auto_complete_tipoMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- ===============================tipo do mapa fim==========================================   -->





</RelativeLayout>